if not exist ".\bin" mkdir bin

copy packages\Newtonsoft.Json.11.0.2\lib\{{targetFrameworkNuget}}\Newtonsoft.Json.dll bin\Newtonsoft.Json.dll
copy packages\RestSharp.110.2.0\lib\{{targetFrameworkNuget}}\RestSharp.dll bin\RestSharp.dll

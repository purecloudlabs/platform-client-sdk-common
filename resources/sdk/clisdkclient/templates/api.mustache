		if printReqBody {
			{{#allParams}}{{#vendorExtensions}}{{#x-baseType}}
			reqModel := models.{{x-baseType}}{}
			utils.Render(reqModel.String())
			{{/x-baseType}}{{/vendorExtensions}}{{/allParams}}
